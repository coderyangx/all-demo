/* pages/articles.wxss */
.articles-container {
  background-color: antiquewhite;
}
.article-list {
  padding: 20px;
}

.article-item {
  display: flex;
  margin-bottom: 20px;
  border-bottom: 1px solid #eee;
  padding-bottom: 10px;
}

.article-image {
  width: 120px;
  height: 80px;
  margin-right: 15px;
}

.article-info {
  flex: 1;
}

.article-title {
  font-size: 16px;
  font-weight: bold;
}

.article-date {
  font-size: 12px;
  color: #888;
  margin-top: 5px;
}

.article-summary {
  font-size: 14px;
  color: #333;
  margin-top: 10px;
}